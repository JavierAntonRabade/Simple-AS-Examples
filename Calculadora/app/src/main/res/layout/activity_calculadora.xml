<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:andorid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Calculadora"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:text="RESULT"
                android:id="@+id/textView"
                android:background="#ffffff" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="C"
                android:id="@+id/button_clean"
                android:onClick="onClickClean"
                android:layout_gravity="right"
                android:layout_weight="1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="ANS"
                android:id="@+id/button_ans"
                android:onClick="onClickAns"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="7"
                    android:id="@+id/button7"
                    android:onClick="onClickNumber"
                    android:layout_row="0"
                    android:layout_column="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="8"
                    android:id="@+id/button8"
                    android:onClick="onClickNumber"
                    android:layout_row="0"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="9"
                    android:id="@+id/button9"
                    android:onClick="onClickNumber"
                    android:layout_row="0"
                    android:layout_column="2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="/"
                    android:id="@+id/button_div"
                    android:onClick="onClickSimbol"
                    android:layout_row="0"
                    android:layout_column="3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="4"
                    android:id="@+id/button4"
                    android:onClick="onClickNumber"
                    android:layout_row="1"
                    android:layout_column="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="5"
                    android:id="@+id/button5"
                    android:onClick="onClickNumber"
                    android:layout_row="1"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="6"
                    android:id="@+id/button6"
                    android:onClick="onClickNumber"
                    android:layout_row="1"
                    android:layout_column="2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="x"
                    android:id="@+id/button_multiply"
                    android:onClick="onClickSimbol"
                    android:layout_row="1"
                    android:layout_column="3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="1"
                    android:id="@+id/button1"
                    android:onClick="onClickNumber"
                    android:layout_row="2"
                    android:layout_column="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="2"
                    android:id="@+id/button2"
                    android:onClick="onClickNumber"
                    android:layout_row="2"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="3"
                    android:id="@+id/button3"
                    android:onClick="onClickNumber"
                    android:layout_row="2"
                    android:layout_column="2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="-"
                    android:id="@+id/button_sub"
                    android:onClick="onClickRestar"
                    android:layout_row="2"
                    android:layout_column="3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:id="@+id/button_dot"
                    android:text="."
                    android:onClick="onClickDot"
                    android:layout_row="3"
                    android:layout_column="0" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="0"
                    android:id="@+id/button0"
                    android:onClick="onClickNumber"
                    android:layout_row="3"
                    android:layout_column="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="+"
                    android:id="@+id/button_add"
                    android:onClick="onClickSimbol"
                    android:layout_row="3"
                    android:layout_column="2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="="
                    android:id="@+id/button_equal"
                    android:onClick="onClickEqual"
                    android:layout_row="3"
                    android:layout_column="3" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text="("
                    android:id="@+id/button_bracket_L"
                    android:onClick="onClickSimbol"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:text=")"
                    android:layout_weight="1"
                    android:id="@+id/button_bracket_R"
                    android:onClick="onClickSimbol"/>

                <Button
                    android:layout_width="181dp"
                    android:layout_height="85dp"
                    android:text="LLAMAR"
                    android:id="@+id/button_call"
                    android:onClick="onClickCall" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
