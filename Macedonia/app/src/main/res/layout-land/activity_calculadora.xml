<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Calculadora"
    android:id="@+id/rl_calculadora"
    android:background="@drawable/calculadora_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="RESULT"
            android:id="@+id/tv_calculadora"
            android:background="@color/transparent"
            android:layout_gravity="end"
            android:textAlignment="viewEnd"
            android:textSize="45dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginLeft="52dp"
                android:text="^"
                android:onClick="onClickSimbol"
                android:id="@+id/button_elevar"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="ANS"
                android:id="@+id/button_ans"
                android:onClick="onClickAns"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="C"
                android:id="@+id/button_clean"
                android:onClick="onClickClean"
                android:layout_gravity="right"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="7"
                android:background="@android:color/transparent"
                android:id="@+id/button7"
                android:onClick="onClickNumber"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="8"
                android:id="@+id/button8"
                android:onClick="onClickNumber"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="9"
                android:id="@+id/button9"
                android:onClick="onClickNumber"
                android:layout_row="0"
                android:layout_column="2"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginRight="70dp
                "
                android:text="-"
                android:id="@+id/button_sub"
                android:onClick="onClickRestar"
                android:layout_row="2"
                android:layout_column="3"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="71dp">

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginLeft="52dp"
                android:text="("
                android:id="@+id/button_bracket_L"
                android:onClick="onClickSimbol"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="/"
                android:id="@+id/button_div"
                android:onClick="onClickSimbol"
                android:layout_row="0"
                android:layout_column="3"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="0"
                android:id="@+id/button0"
                android:onClick="onClickNumber"
                android:layout_row="3"
                android:layout_column="1"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="4"
                android:id="@+id/button4"
                android:onClick="onClickNumber"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="5"
                android:id="@+id/button5"
                android:onClick="onClickNumber"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="6"
                android:id="@+id/button6"
                android:onClick="onClickNumber"
                android:layout_row="1"
                android:layout_column="2"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginRight="70dp"
                android:text="+"
                android:id="@+id/button_add"
                android:onClick="onClickSimbol"
                android:layout_row="3"
                android:layout_column="2"
                android:textColor="@android:color/transparent"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginLeft="52dp"
                android:text=")"
                android:id="@+id/button_bracket_R"
                android:onClick="onClickSimbol"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="x"
                android:id="@+id/button_multiply"
                android:onClick="onClickSimbol"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:id="@+id/button_dot"
                android:text="."
                android:onClick="onClickDot"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="1"
                android:id="@+id/button1"
                android:onClick="onClickNumber"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="2"
                android:id="@+id/button2"
                android:onClick="onClickNumber"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:text="3"
                android:id="@+id/button3"
                android:onClick="onClickNumber"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

            <Button
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_marginRight="70dp
                "
                android:text="="
                android:id="@+id/button_equal"
                android:onClick="onClickEqual"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent" />

        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="LLAMAR"
            android:id="@+id/button_call"
            android:onClick="onClickCall"
            android:textColor="@android:color/transparent"
            android:background="@android:color/transparent" />

    </LinearLayout>

</RelativeLayout>