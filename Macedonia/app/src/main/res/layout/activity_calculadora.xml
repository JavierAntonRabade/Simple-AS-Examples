<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    tools:context=".Calculadora"
    android:id="@+id/LL_calculadora"
    android:background="@drawable/calculadora_background"
    android:weightSum="1">


    <TextView
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_calculadora"
        android:background="@color/transparent"
        android:singleLine="true"
        android:textSize="45dp"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textAlignment="viewEnd"
        android:autoText="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="355dp"
        android:layout_weight="0.62">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="274dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="C"
                    android:id="@+id/button_clean"
                    android:onClick="onClickClean"
                    android:layout_gravity="right"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="ANS"
                    android:id="@+id/button_ans"
                    android:onClick="onClickAns"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="/"
                    android:id="@+id/button_div"
                    android:onClick="onClickSimbol"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="19dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="59dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:id="@+id/button7"
                    android:background="@color/transparent"
                    android:onClick="onClickNumber"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:id="@+id/button8"
                    android:onClick="onClickNumber"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:layout_weight="1"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:id="@+id/button9"
                    android:onClick="onClickNumber"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:layout_weight="1"
                    android:textColor="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="11dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="51dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:id="@+id/button4"
                    android:onClick="onClickNumber"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:id="@+id/button5"
                    android:onClick="onClickNumber"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:id="@+id/button6"
                    android:onClick="onClickNumber"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:id="@+id/button1"
                    android:onClick="onClickNumber"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:id="@+id/button2"
                    android:onClick="onClickNumber"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:id="@+id/button3"
                    android:onClick="onClickNumber"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:textColor="@color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:id="@+id/button0"
                    android:onClick="onClickNumber"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:layout_weight="0.89"
                    android:textColor="@color/transparent" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/button_dot"
                    android:text="."
                    android:onClick="onClickDot"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:backgroundTint="#FFC1BDBD"
                    android:background="#00ffffff"
                    android:layout_weight="0.18"
                    android:textColor="@color/transparent" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:id="@+id/button_multiply"
                android:onClick="onClickSimbol"
                android:layout_row="1"
                android:layout_column="3"
                android:background="#00ffffff"
                android:layout_weight="0.21"
                android:textColor="@color/transparent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/button_sub"
                android:onClick="onClickRestar"
                android:layout_row="2"
                android:layout_column="3"
                android:background="#00ffffff"
                android:layout_weight="0.23"
                android:textColor="@color/transparent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:text="+"
                android:id="@+id/button_add"
                android:onClick="onClickSimbol"
                android:layout_row="3"
                android:layout_column="2"
                android:background="#00ffffff"
                android:layout_weight="0.23"
                android:textColor="@color/transparent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:text="="
                android:id="@+id/button_equal"
                android:onClick="onClickEqual"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@animator/button_style"
                android:layout_weight="0.61"
                android:textColor="@color/transparent" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LLAMAR"
        android:id="@+id/button_call"
        android:onClick="onClickCall"
        android:backgroundTint="#FFC1BDBD"
        android:background="#00ffffff"
        android:textColor="@color/transparent" />

</LinearLayout>